BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.25
        Label:
            text: "Sort by:"
        Spinner:
            id: sort_rule
            text: "Artist"
            value: ["Artist", "Title", "Year", "Completed"]
        Label:
            text: "Add New Album..."
        Label:
            text: "Title:"
        TextInput:
            id: title
        Label:
            text: "Artist:"
        TextInput:
            id: artist
        Label:
            text: "Year:"
        TextInput:
            id: year
        Button:
            text: "Add Album"
            on_press: app.LogHandler.add_album()
        Button:
            text: "Clear"
            on_press: app.clear_albums_box()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            id: albums_box
        Label:
            size_hint_y: 0.1
            text: "Welcome to Album Tracker 2.0"
